<% provide(:title, @week.name) %>

<% content_for :sidebar do %>
<li>
	<%= link_to edit_week_path(params[:id]) do %> <i class="icon-wrench"></i> Edit week details
	<% end %>
</li>
<% end %>
<div class="row">
      <h1>
        <%= @week.name %>
      </h1>

        <%= @week.status %>
      <%= @week.startDate  %>
      <%= @week.endDate  %>

</div>
<% if @week.users.count > 0 %>
<div class="carousel" style="height: 500px;" data-role="carousel"  data-param-direction="left" data-param-period="9999999999999" data-param-markers="on" >
                                <div class="slides">
<% @week.users.each do |user| %>
                                    <div class="slide image" >
    <div class="tile bg-color-orange"></div>
  <%= link_to user.name, user  %>
  <%= user.email  %>
 <p>Summary</p> <%= user.userweeks.find_by_week_id(@week.id).summary  %>
 <p>Jiras</p> <%= user.userweeks.find_by_week_id(@week.id).jiras  %>
                                    </div>

<%end%>

                                </div>
                                <span class="control left">&#8249;</span>
                                <span class="control right">&#8250;</span>
                        </div>

<% else %> 
<div><h3>This week does not have any users. Really?? </h3> </div>
<% end %>
